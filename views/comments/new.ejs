<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%=camp.name%></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                
                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div> -->
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Go back</a>
        </div>

    </div>
</div>
<%- include ("../partials/footer") %>