<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Update Campground</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%=camp._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%=camp.name%>"">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%=camp.image%>"">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" placeholder="<%=camp.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%=camp.description%>"">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>
</div>
<%- include ("../partials/footer") %>