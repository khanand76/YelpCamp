<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create New Campground</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>
</div>
<%- include ("../partials/footer") %>