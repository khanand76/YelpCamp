<%- include ("../partials/header") %>

<div class="container">

    <h1>
        Welcome to <%=camps.name %>
    </h1>

    <div class="row">
        <div class="col-md-3"> 
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Input 1</li>
                <li class="list-group-item">Input 1</li>
                <li class="list-group-item">Input 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=camps.image%>">
                <div class="caption ">
                   <!--<h4><%=camps.user.username%></h4>-->
                    <h4 class="pull-right">$<%=camps.price%>/night</h4>
                    <h4><a href=""><%=camps.name %></a></h4>
                    <!-- <h4 class="pull-right">Created By <%=camps.user.username%></h4> -->
                    <p>
                        <%= camps.description%>
                    </p>
                    <p><em>Created By <%=camps.user.username%></em></p>
                    <% if(currentUser&&currentUser._id.toString()===camps.user.id.toString()){%>
                        <form class="delete-form" action="/campgrounds/<%=camps._id%>/?_method=DELETE" method="POST"> <button class="btn btn-danger btn-xs" type="submit">Delete <%camps.user.id.toString()%></button></form>
                        <a class="btn btn-warning btn-xs" href="/campgrounds/<%=camps._id%>/edit">Update</a>
                   <% }%>
                    
                    <!-- <a href="/campgrounds/<%=camps._id%>/delete">Delete</a> -->
                    
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=camps._id%>/comments/new">Add New Comment</a>
                    
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        
                        <%camps.comments.forEach(function(comment){%>
                            <strong><%=comment.author.username%></strong>
                            <span class="pull-right">10 days ago</span>
                            <% if(currentUser&&currentUser._id.toString()===comment.author.id.toString()){
                                %> <form class="delete-form" action="/campgrounds/<%=camps._id%>/comments/<%=comment._id%>/?_method=DELETE" method="POST"><button class="btn btn-xs btn-danger">Delete</button></form>
                                <a class="btn btn-xs btn-warning" href="/campgrounds/<%=camps._id%>/comments/<%=comment._id%>/edit">Update</a>
                                
                           <% }%> 
                            <p> <%=comment.text%></p>
                             
                            
                            <%})%>
                    </div>
                </div>
            </div>
            
           
        </div>
    </div>

   

    

   


    <a href="/">Home Page</a>


</div>


<%- include ("../partials/footer") %>